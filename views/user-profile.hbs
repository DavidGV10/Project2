{{! views/users/user-profile.hbs }}

<div class="profile">
  {{#if userInSession}}
    <h2>Welcome, {{userInSession.username}}!</h2>
    <p>This is your profile page!</p>
    {{#each findMemes}}
      <a href="/memes/update/{{_id}}"><img src="{{url}}" /></a>
    {{/each}}
    {{! <div>
      <a href="user-profile">Reload the page</a>
    </div> }}
    <form id="logout-form" action="/users/logout" method="POST">
      <button>Logout</button>
    </form>
  {{else}}
    <p>Still no logged in user, sorry!</p>
  {{/if}}
</div>