<h1 class="title-memes">UPDATE YOUR MEME!</h1>
<div class="mt-boxes">
  <div class="mt-img-wrap">
    <img src="{{memeToBeUpdated.url}}" />
  </div>
  <form action="/memes/update/{{memeToBeUpdated.id}}" method="POST">
    <div class="meme-text">
      <div class="meme-text-size">
        <label for="text0">Text Box 1</label>
        <input type="text" name="text0" value="{{text0}}" />
      </div>
      <div class="meme-text-size">
        <label for="text1">Text Box 2</label>
        <input type="text" name="text1" value="{{text1}}" />
      </div>
    </div>
    <button type="submit">Update Meme!</button>
  </form>
</div>